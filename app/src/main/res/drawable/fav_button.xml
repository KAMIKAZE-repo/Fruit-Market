<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <layer-list>
            <item
                android:gravity="center"
                android:bottom="2dp">
                <shape
                    android:shape="oval"
                    android:tint="@color/white"
                    />
            </item>
            <item android:drawable="@drawable/favorite_outlined"
                android:gravity="center"/>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item
                android:gravity="center"
                android:bottom="2dp">
                <shape
                    android:shape="oval"
                    android:tint="@color/white"
                    />
            </item>
            <item android:drawable="@drawable/favorite_filled"
                android:gravity="center"/>
        </layer-list>
    </item>


</selector>